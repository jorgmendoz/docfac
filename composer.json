{
    "name": "docfav/prueba-tecnica",
    "description": "Prueba técnica para Docfav - Aplicación PHP sin frameworks (salvo Doctrine) utilizando DDD y Docker.",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "doctrine/orm": "^2.10",
        "doctrine/dbal": "^3.0",
        "doctrine/annotations": "^2.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "doctrine/cache": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    }
}
